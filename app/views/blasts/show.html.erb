      <div class="ui colored blue divider"></div>
        <div>
          <strong>Text:</strong>
          <div class="ui secondary segment">
           <%= @blast.text %>
          </div>
        </div>
        <br>
        <div>
          <strong>Reach:</strong>
          <%= @blast.reach %>
        </div>
        <br>
        <div>
          <strong>Sent:</strong>
          <%= @blast.created_at   %>
        </div>
        <br>

<%= link_to 'Back', blasts_path %>
    </div>
  </div>
  <div class="five wide column"></div>
</div>



