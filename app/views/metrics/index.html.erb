<div class="ui grid">
  <div class="two wide column"></div>
  <div class="twelve wide column">

    <div class="ui segment" id="spacer">
  <div class="ui blue header">
    <h1 class="blue">Interactions Metrics</h1>
  </div>

<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Interaction</th>
      <th>Date Created</th>
      <th>Hits</th>
      <th>Hits per week</th>
    </tr>
  </thead>
  <tbody>
  
      <% Interaction.all.each do |i| %>
        <tr>

          <td><%= link_to i.user_input, i %></td>
          <td><%= i.created_at.strftime("%a %b %e %Y %T") %></td>
          <td><%= i.hits %></td>
          <td><%= Interaction.hits_per_week(i) %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>
    </div>
  <div class="two wide column"></div>
</div>

<div class="ui grid">
  <div class="two wide column"></div>
  <div class="twelve wide column">

<div class="ui segment" id="spacer">
  <div class="ui blue header">
    <h1 class="blue">Message Metrics</h1>
  </div>

<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Message</th>
      <th>Date Created</th>
      <th>Reach</th>
    </tr>
  </thead>
  <tbody>
  
      <% Message.all.each do |message| %>
        <tr>
          <td><%= message.project %></td>
          <td><%= message.created_at.strftime("%a %b %e %Y %T") %></td>
          <td><%= message.reach %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>
    </div>
  <div class="two wide column"></div>
</div>